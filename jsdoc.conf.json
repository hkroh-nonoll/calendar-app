{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["./src", "README.md"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "opts": {
    "template": "node_modules/better-docs",
    "destination": "docs",
    "encoding": "utf8",
    "recurse": true,
    "verbose": true
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "better-docs": {
      "name": "Calendar App",
      "navigation": [{
          "label": "Github",
          "href": "https://github.com/hkroh-nonoll/calendar-app"
        },
        {
          "label": "JS Doc",
          "href": "https://hkroh-nonoll.github.io/calendar-app"
        },
        {
          "label": "Heroku",
          "href": "https://hkroh-calendar-app.herokuapp.com"
        }
      ]
    }
  }
}